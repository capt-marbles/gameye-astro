---
import MarketingPageLayout from '../../layouts/MarketingPageLayout.astro';

const studyThemes = [
  {
    title: 'Migration outcomes',
    text: 'How studios moved from bespoke hosting to orchestrated deployment without service disruption.',
  },
  {
    title: 'Latency and reliability',
    text: 'Regional placement and operational response patterns that improved match stability.',
  },
  {
    title: 'Cost and scale control',
    text: 'Provider-mix strategies used to handle growth and event-driven concurrency spikes.',
  },
];
---

<MarketingPageLayout
  title="Gameye Case Studies: Studio infrastructure outcomes"
  description="Case study entry page for studio infrastructure outcomes and multiplayer orchestration examples."
  canonical="https://gameye.com/case-studies/"
  ogType="website"
  ogImage="https://gameye.com/wp-content/uploads/2024/01/chivalry2-testimonial.png"
  ogImageAlt="Gameye case studies"
  schemaType="CollectionPage"
  schemaName="Gameye Case Studies"
>
  <section class="section page-hero">
    <div class="container">
      <p class="subtitle">Case Studies</p>
      <h1>Real deployment outcomes from multiplayer teams.</h1>
      <p class="lead">
        This MVP placeholder page will be replaced by full case study templates during the blog/case migration phase.
      </p>
      <div class="actions">
        <a class="button primary" href="/contact-us/">Request references</a>
        <a class="button secondary" href="/comparison/">Review comparisons</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container cards">
      {studyThemes.map((item) => (
        <article class="card">
          <h3>{item.title}</h3>
          <p>{item.text}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="section">
    <div class="container quick-links">
      <a href="/how-it-works/">See delivery workflow</a>
      <a href="/comparison/">Review platform comparisons</a>
      <a href="/pricing/">Estimate infrastructure cost</a>
      <a href="/docs/">Open documentation hub</a>
    </div>
  </section>
</MarketingPageLayout>

<style>
  .page-hero .lead {
    margin-top: 1rem;
    max-width: 66ch;
    font-size: 1.15rem;
  }

  .actions {
    margin-top: 1.4rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem;
  }

  .card {
    border: 1px solid color-mix(in srgb, var(--gy-color-dark-blue) 12%, #fff);
    background: var(--gy-color-white);
    border-radius: var(--gy-radius-lg);
    padding: 1.2rem;
  }

  .card h3 {
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .quick-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .quick-links a {
    text-decoration: none;
    border: 1px solid color-mix(in srgb, var(--gy-color-dark-blue) 16%, #fff);
    border-radius: 999px;
    padding: 0.55rem 0.95rem;
    color: var(--gy-color-alt-dark-blue);
  }

  @media (max-width: 960px) {
    .cards {
      grid-template-columns: 1fr;
    }
  }
</style>
