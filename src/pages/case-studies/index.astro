---
import MarketingPageLayout from '../../layouts/MarketingPageLayout.astro';
---

<MarketingPageLayout
  title="Gameye Case Studies: Studio infrastructure outcomes"
  description="Case study entry page for studio infrastructure outcomes and multiplayer orchestration examples."
  canonical="https://gameye.com/case-studies/"
  ogType="website"
  ogImage="https://gameye.com/wp-content/uploads/2024/01/chivalry2-testimonial.png"
  ogImageAlt="Gameye case studies"
  schemaType="CollectionPage"
  schemaName="Gameye Case Studies"
>
  <section class="section page-hero">
    <div class="container">
      <p class="subtitle">Case Studies</p>
      <h1>Real deployment outcomes from multiplayer teams.</h1>
      <p class="lead">
        This MVP placeholder page will be replaced by full case study templates during the blog/case migration phase.
      </p>
      <div class="actions">
        <a class="button primary" href="/contact-us/">Request references</a>
        <a class="button secondary" href="/comparison/">Review comparisons</a>
      </div>
    </div>
  </section>
</MarketingPageLayout>

<style>
  .page-hero .lead {
    margin-top: 1rem;
    max-width: 66ch;
    font-size: 1.15rem;
  }

  .actions {
    margin-top: 1.4rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
</style>
