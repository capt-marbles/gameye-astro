<script>
  const PRICING_SCENARIOS = {
    "indie-launch": {
      monthlyPlayers: 180000,
      peakCcu: 1800,
      sessionMinutes: 28,
      regionFactor: 1,
      profileRate: 0.12,
      burstMultiplier: 110,
      opsFactor: 1,
    },
    "midscale-live": {
      monthlyPlayers: 620000,
      peakCcu: 5400,
      sessionMinutes: 35,
      regionFactor: 1.08,
      profileRate: 0.16,
      burstMultiplier: 135,
      opsFactor: 1.12,
    },
    "event-peak": {
      monthlyPlayers: 1600000,
      peakCcu: 18000,
      sessionMinutes: 42,
      regionFactor: 1.16,
      profileRate: 0.2,
      burstMultiplier: 175,
      opsFactor: 1.22,
    },
  };

  const trackEvent = (eventName, payload) => {
    const data = { event: eventName, ...payload };

    if (Array.isArray(window.dataLayer)) {
      window.dataLayer.push(data);
    }

    window.dispatchEvent(new CustomEvent("gameye:analytics", { detail: data }));
  };

  const formatCurrency = (value) =>
    value.toLocaleString(undefined, {
      style: "currency",
      currency: "USD",
      maximumFractionDigits: 0,
    });

  const formatNumber = (value) =>
    value.toLocaleString(undefined, {
      maximumFractionDigits: 0,
    });

  const calcTier = (monthlyEstimate) => {
    if (monthlyEstimate < 30000) return "Launch";
    if (monthlyEstimate < 90000) return "Growth";
    return "Scale";
  };

  const initPricingEstimator = () => {
    document.querySelectorAll("[data-pricing-estimator]").forEach((root) => {
      if (!(root instanceof HTMLElement)) return;
      if (root.dataset.bound === "true") return;
      root.dataset.bound = "true";

      const monthlyPlayers = root.querySelector('[data-field="monthlyPlayers"]');
      const peakCcu = root.querySelector('[data-field="peakCcu"]');
      const sessionMinutes = root.querySelector('[data-field="sessionMinutes"]');
      const regionFactor = root.querySelector('[data-field="regionFactor"]');
      const profileRate = root.querySelector('[data-field="profileRate"]');
      const burstMultiplier = root.querySelector('[data-field="burstMultiplier"]');
      const opsFactor = root.querySelector('[data-field="opsFactor"]');

      if (!(monthlyPlayers instanceof HTMLInputElement)) return;
      if (!(peakCcu instanceof HTMLInputElement)) return;
      if (!(sessionMinutes instanceof HTMLInputElement)) return;
      if (!(regionFactor instanceof HTMLSelectElement)) return;
      if (!(profileRate instanceof HTMLSelectElement)) return;
      if (!(burstMultiplier instanceof HTMLInputElement)) return;
      if (!(opsFactor instanceof HTMLSelectElement)) return;

      const outputs = {
        monthly: root.querySelector('[data-output="monthly"]'),
        annual: root.querySelector('[data-output="annual"]'),
        sessionHours: root.querySelector('[data-output="sessionHours"]'),
        perCcu: root.querySelector('[data-output="perCcu"]'),
        tier: root.querySelector('[data-output="tier"]'),
        low: root.querySelector('[data-output="low"]'),
        high: root.querySelector('[data-output="high"]'),
        burstLabel: root.querySelector('[data-output="burst-label"]'),
      };

      const scenarioButtons = Array.from(root.querySelectorAll('[data-scenario]'));
      const ctaLinks = Array.from(root.querySelectorAll('[data-track-cta]'));

      let lastTrackedKey = "";
      let trackingTimer = null;

      const calc = () => {
        const playerCount = Math.max(1000, Number(monthlyPlayers.value || 0));
        const peak = Math.max(100, Number(peakCcu.value || 0));
        const avgSession = Math.min(180, Math.max(5, Number(sessionMinutes.value || 0)));
        const region = Number(regionFactor.value || 1);
        const profile = Number(profileRate.value || 0.16);
        const burst = Math.max(1, Number(burstMultiplier.value || 100) / 100);
        const ops = Number(opsFactor.value || 1);

        const peakDrivenHours = peak * 30 * 2.5;
        const playerDrivenHours = playerCount * (avgSession / 60) * 0.11;
        const sessionHours = Math.max(peakDrivenHours, playerDrivenHours);

        const monthlyEstimate = sessionHours * profile * region * burst * ops;
        const low = monthlyEstimate * 0.82;
        const high = monthlyEstimate * 1.18;
        const annual = monthlyEstimate * 12;
        const perCcu = monthlyEstimate / peak;
        const tier = calcTier(monthlyEstimate);

        if (outputs.monthly instanceof HTMLElement) outputs.monthly.textContent = formatCurrency(monthlyEstimate);
        if (outputs.annual instanceof HTMLElement) outputs.annual.textContent = formatCurrency(annual);
        if (outputs.sessionHours instanceof HTMLElement) outputs.sessionHours.textContent = formatNumber(sessionHours);
        if (outputs.perCcu instanceof HTMLElement) outputs.perCcu.textContent = formatCurrency(perCcu);
        if (outputs.tier instanceof HTMLElement) outputs.tier.textContent = tier;
        if (outputs.low instanceof HTMLElement) outputs.low.textContent = formatCurrency(low);
        if (outputs.high instanceof HTMLElement) outputs.high.textContent = formatCurrency(high);
        if (outputs.burstLabel instanceof HTMLElement) outputs.burstLabel.textContent = `${burst.toFixed(2)}x`;

        const trackPayload = {
          monthly_estimate: Math.round(monthlyEstimate),
          annual_estimate: Math.round(annual),
          estimated_session_hours: Math.round(sessionHours),
          peak_ccu: peak,
          tier,
        };

        const trackingKey = JSON.stringify(trackPayload);
        if (trackingKey !== lastTrackedKey) {
          lastTrackedKey = trackingKey;
          if (trackingTimer) clearTimeout(trackingTimer);
          trackingTimer = window.setTimeout(() => {
            trackEvent("pricing_estimator_updated", trackPayload);
          }, 300);
        }

        return trackPayload;
      };

      const applyScenario = (scenarioKey) => {
        const scenario = PRICING_SCENARIOS[scenarioKey];
        if (!scenario) return;

        monthlyPlayers.value = String(scenario.monthlyPlayers);
        peakCcu.value = String(scenario.peakCcu);
        sessionMinutes.value = String(scenario.sessionMinutes);
        regionFactor.value = String(scenario.regionFactor);
        profileRate.value = String(scenario.profileRate);
        burstMultiplier.value = String(scenario.burstMultiplier);
        opsFactor.value = String(scenario.opsFactor);

        scenarioButtons.forEach((button) => {
          if (!(button instanceof HTMLElement)) return;
          const active = button.dataset.scenario === scenarioKey;
          button.classList.toggle("active", active);
        });

        const payload = calc();
        trackEvent("pricing_scenario_selected", {
          scenario: scenarioKey,
          monthly_estimate: payload.monthly_estimate,
          tier: payload.tier,
        });
      };

      scenarioButtons.forEach((button) => {
        if (!(button instanceof HTMLButtonElement)) return;
        button.addEventListener("click", () => {
          const scenarioKey = button.dataset.scenario;
          if (!scenarioKey) return;
          applyScenario(scenarioKey);
        });
      });

      ctaLinks.forEach((link) => {
        if (!(link instanceof HTMLAnchorElement)) return;
        link.addEventListener("click", () => {
          const action = link.dataset.trackCta || "pricing_cta";
          const payload = calc();
          trackEvent("pricing_cta_clicked", {
            action,
            monthly_estimate: payload.monthly_estimate,
            tier: payload.tier,
          });
        });
      });

      [monthlyPlayers, peakCcu, sessionMinutes, regionFactor, profileRate, burstMultiplier, opsFactor].forEach((field) => {
        field.addEventListener("input", calc);
        field.addEventListener("change", calc);
      });

      applyScenario("indie-launch");
    });
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initPricingEstimator, { once: true });
  } else {
    initPricingEstimator();
  }
</script>
