---
interface Props {
  count?: number;
  color?: string;
}

const { count = 10, color = "61,255,207" } = Astro.props;
---

<div class="gy-particles-layer" aria-hidden="true" data-count={count} data-color={color}>
  <canvas class="gy-particles-canvas"></canvas>
</div>

<style>
  .gy-particles-layer {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .gy-particles-canvas {
    width: 100%;
    height: 100%;
    display: block;
  }

  @media (prefers-reduced-motion: reduce) {
    .gy-particles-layer {
      display: none;
    }
  }
</style>
