---
interface Props {
  overlay?: boolean;
}

interface NavLink {
  href: string;
  label: string;
  match?: 'exact' | 'prefix';
  activePrefixes?: string[];
}

const { overlay = false } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks: NavLink[] = [
  { href: '/platform/', label: 'Platform', match: 'exact' },
  { href: '/how-it-works/', label: 'How it works', match: 'exact' },
  { href: '/comparison/', label: 'Comparison', match: 'exact' },
  { href: '/pricing/', label: 'Pricing', match: 'exact' },
  { href: '/blog/', label: 'Blog', match: 'prefix' },
  { href: 'https://docs.gameye.com/', label: 'Docs', activePrefixes: ['/docs/'] },
  { href: 'https://docs.gameye.com/api/reference', label: 'API', activePrefixes: ['/docs/api/'] },
];

const isActive = (link: NavLink) => {
  if (link.activePrefixes?.length) {
    return link.activePrefixes.some((prefix) => currentPath === prefix || currentPath.startsWith(prefix));
  }

  const match = link.match ?? 'exact';
  return match === 'prefix'
    ? currentPath === link.href || currentPath.startsWith(link.href)
    : currentPath === link.href;
};
---

<header class:list={['site-header', overlay && 'overlay']}>
  <div class="container header-inner">
    <a href="/" class="brand" aria-label="Gameye Home">
      <img class="brand-logo" src="/brand/gameye-logo.svg" alt="Gameye Infrastructure" width="233" height="54" />
    </a>

    <nav aria-label="Primary" class="nav">
      {navLinks.map((link) => (
        <a
          href={link.href}
          aria-current={isActive(link) ? 'page' : undefined}
          rel={link.href.startsWith('http') ? 'noreferrer' : undefined}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <a class="button primary" href="/contact-us/">Contact us</a>
  </div>
</header>

<style>
  .site-header {
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 30;
    backdrop-filter: blur(8px);
    background: color-mix(in srgb, var(--gy-color-bg) 92%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--gy-color-light-blue) 20%, #fff);
  }

  .site-header.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: color-mix(in srgb, #ffffff 82%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--gy-color-light-blue) 22%, #fff);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    white-space: nowrap;
  }

  .brand-logo {
    display: block;
    width: 10.75rem;
    height: auto;
  }

  .nav {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: clamp(1.15rem, 1.4vw, 1.65rem);
  }

  .nav a {
    text-decoration: none;
    color: var(--gy-color-nav);
    font-size: 0.95rem;
  }

  .nav a[aria-current='page'] {
    color: var(--gy-color-dark-blue);
    font-weight: 500;
  }

  .nav a:hover {
    color: var(--gy-color-dark-blue);
  }

  @media (max-width: 900px) {
    .nav {
      display: none;
    }

    .brand-logo {
      width: 9.2rem;
    }
  }
</style>
