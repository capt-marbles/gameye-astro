---
import SectionParticles from './SectionParticles.astro';

const images = [
  {
    src: 'https://gameye.com/wp-content/uploads/2026/02/2026_Marathon_Preorder_Press_Kit_Deluxe_Rewards_Compressed_002.jpeg',
    alt: 'Marathon gameplay still',
  },
  {
    src: 'https://gameye.com/wp-content/uploads/2025/12/ss_3721cad5d122acebb7376a6bbbb2fc475a1851bd.1920x1080.jpg',
    alt: 'Multiplayer arena scene',
  },
  {
    src: 'https://gameye.com/wp-content/uploads/2025/12/clone-drone-jetpack-slice.gif',
    alt: 'Action gameplay clip',
  },
  {
    src: 'https://gameye.com/wp-content/uploads/2025/12/MKT_SS_GC_8-Player-Charge_1080p.webp',
    alt: 'Co-op combat screenshot',
  },
  {
    src: 'https://gameye.com/wp-content/uploads/2025/12/Screenshot-2025-12-06-at-17.50.24.png',
    alt: 'Top-down tactical match screenshot',
  },
];
---

<section class="section image-grid-section">
  <SectionParticles count={8} />
  <div class="container layout">
    <div class="text">
      <p class="subtitle">Reusable Section</p>
      <h2>Image grid showcase</h2>
      <p>
        This section mirrors the Gameye homepage mosaic pattern and is ready to be fed from CMS-managed media later.
      </p>
      <a class="button secondary" href="/case-studies/">Explore case studies</a>
    </div>

    <div class="image-grid" aria-label="Featured game visuals">
      {images.map((image, index) => (
        <figure class={`tile tile-${index + 1}`}>
          <img src={image.src} alt={image.alt} loading="lazy" decoding="async" />
        </figure>
      ))}
    </div>
  </div>
</section>

<style>
  .image-grid-section {
    position: relative;
    overflow: hidden;
    background: var(--gy-color-bg);
  }

  .image-grid-section .layout {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    gap: 4rem;
    align-items: start;
  }

  .text p {
    margin-top: 0.9rem;
    max-width: 60ch;
  }

  .text .button {
    margin-top: 1.1rem;
  }

  .image-grid {
    width: 100%;
    aspect-ratio: 1.5;
    position: relative;
    background: var(--gy-color-white);
    border-radius: var(--gy-radius-xl);
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .tile {
    margin: 0;
    position: absolute;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid color-mix(in srgb, var(--gy-color-dark-blue) 10%, #fff);
    background: var(--gy-color-white);
    transition: all 0.4s ease;
    z-index: 1;
  }

  .tile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
    display: block;
    transition: all 0.4s ease;
  }

  .tile-1 {
    left: 0%;
    top: 0%;
    width: 31.5%;
    height: 30.5%;
  }

  .tile-2 {
    left: 0%;
    top: 34.5%;
    width: 31.5%;
    height: 65%;
  }

  .tile-3 {
    left: 34.2%;
    top: 0%;
    width: 31.5%;
    height: 100%;
  }

  .tile-4 {
    left: 68.4%;
    top: 0%;
    width: 31.5%;
    height: 65%;
  }

  .tile-5 {
    left: 68.4%;
    top: 69%;
    width: 31.5%;
    height: 30.5%;
  }

  .image-grid.hover-tile-1 .tile-1,
  .image-grid.hover-tile-2 .tile-2,
  .image-grid.hover-tile-3 .tile-3,
  .image-grid.hover-tile-4 .tile-4,
  .image-grid.hover-tile-5 .tile-5 {
    left: 0%;
    top: 0%;
    width: 100%;
    height: 100%;
    z-index: 10;
  }

  .image-grid.hover-tile-1 .tile:not(.tile-1),
  .image-grid.hover-tile-2 .tile:not(.tile-2),
  .image-grid.hover-tile-3 .tile:not(.tile-3),
  .image-grid.hover-tile-4 .tile:not(.tile-4),
  .image-grid.hover-tile-5 .tile:not(.tile-5) {
    transform: scale(0.1);
    opacity: 0.25;
    pointer-events: none;
  }

  .image-grid.hover-tile-1 .tile-1 img,
  .image-grid.hover-tile-2 .tile-2 img,
  .image-grid.hover-tile-3 .tile-3 img,
  .image-grid.hover-tile-4 .tile-4 img,
  .image-grid.hover-tile-5 .tile-5 img {
    transform: scale(1.02);
  }

  @media (max-width: 950px) {
    .image-grid-section .layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .image-grid {
      aspect-ratio: auto;
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      grid-template-rows: none;
      gap: 1rem;
      position: static;
      overflow: visible;
      border-radius: 0;
      background: transparent;
    }

    .tile-1,
    .tile-2,
    .tile-3,
    .tile-4,
    .tile-5 {
      position: relative;
      left: auto;
      top: auto;
      width: auto;
      height: auto;
      grid-column: auto;
      grid-row: auto;
      min-height: 10rem;
      transform: none !important;
      opacity: 1 !important;
      pointer-events: auto !important;
    }

    .tile-3 {
      grid-column: 1 / -1;
      min-height: 14rem;
    }
  }
</style>
